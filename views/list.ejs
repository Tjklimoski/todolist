<%- include('header'); -%>
  
  <div id="heading" class="box">
    <h1>
      <%= title %>
    </h1>
  </div>

  <div class="box">
    <% tasks.forEach( task => { %>
      <div class="item">
        <input type="checkbox">
        <p>
          <%= task.task %>
        </p>
      </div>
    <% }); %>

    <form class="item" method="post">
      <input type="text" name="task" placeholder="What's your next task?" autocomplete="off" required>
      <button type="submit">+</button>
    </form>
  </div>

<%- include('footer'); -%>