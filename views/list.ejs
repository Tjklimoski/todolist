<%- include('header'); -%>
  
  <div id="heading" class="box">
    <h1>
      <%= title %>
    </h1>
  </div>

  <div class="box">
    <% tasks.forEach( task => { %>
      <form action="/deleteItem" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= task._id %>" onChange="this.form.submit()">
          <p>
            <%= task.task %>
          </p>
        </div>
        <input type="hidden" name="listName" value="<%= title %>">
      </form>
    <% }); %>

    <form class="item" method="post">
      <input type="text" name="task" placeholder="What's your next task?" autocomplete="off" required>
      <button type="submit">+</button>
    </form>
  </div>

<%- include('footer'); -%>